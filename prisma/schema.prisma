generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id
  email            String             @unique
  phone            String             @unique
  name             String
  position         String[]           @default(["requester"])
  password         String
  MaintenceRequest MaintenceRequest[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}

model Provider {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  Vehicle   Vehicle[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id         Int                @id @default(autoincrement())
  name       String
  plate      String             @unique
  providerId Int
  provider   Provider           @relation(fields: [providerId], references: [id])
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  maintances MaintenceRequest[]
}

model budget {
  id          Int              @id @default(autoincrement())
  url         String
  path        String
  maintenceId Int
  deadline    DateTime
  status      Int?             @default(0)
  maintence   MaintenceRequest @relation(fields: [maintenceId], references: [id])
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model MaintenceRequest {
  id                Int       @id @default(autoincrement())
  driverName        String
  plate             String
  km                Int
  ownerOfReqId      String
  ownerOfReq        User      @relation(fields: [ownerOfReqId], references: [id])
  observation       String?
  workShopId        String?
  deadlineToForward DateTime?
  status            Int?      @default(0)
  atendedBy         String?   @default("")
  atendedAt         DateTime?
  deadlineToDeviler DateTime?
  delivered         Boolean   @default(false)
  deliveredAt       DateTime?
  finishedBy        String?   @default("")
  finishedAt        DateTime?
  checkoutBy        String?
  checkoutAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  budgets           budget[]
  Vehicle           Vehicle?  @relation(fields: [plate], references: [plate])
}
