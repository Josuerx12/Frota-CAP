generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id
  email            String             @unique
  phone            String             @unique
  name             String
  requester        Boolean?           @default(true)
  frotas           Boolean?           @default(false)
  admin            Boolean?           @default(false)
  password         String
  MaintenceRequest MaintenceRequest[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}

model Address {
  id         Int      @id @default(autoincrement())
  street     String
  number     Int
  cep        Int
  city       String
  state      String
  workshopId Int      @unique
  workshop   Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  country    String
}

model Workshop {
  id               Int                @id @default(autoincrement())
  name             String
  email            String             @unique
  password         String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Address          Address?
  MaintenceRequest MaintenceRequest[]
}

model Provider {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  Vehicle   Vehicle[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Vehicle {
  id               Int                @id @default(autoincrement())
  name             String
  plate            String             @unique
  active           Boolean            @default(true)
  providerId       Int
  provider         Provider           @relation(fields: [providerId], references: [id], onDelete: Cascade)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  MaintenceRequest MaintenceRequest[]
}

model budget {
  id          Int              @id @default(autoincrement())
  url         String
  path        String
  maintenceId Int
  deadline    DateTime
  status      Int?             @default(0)
  maintence   MaintenceRequest @relation(fields: [maintenceId], references: [id], onDelete: Cascade)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model MaintenceRequest {
  id         Int    @id @default(autoincrement())
  driverName String
  km         Int

  service           String
  serviceStartAt    DateTime?
  serviceEndAt      DateTime?
  serviceTime       Float?
  workShopId        Int?
  Workshop          Workshop? @relation(fields: [workShopId], references: [id], onDelete: Cascade)
  deadlineToForward DateTime?
  status            Int?      @default(0)
  atendedBy         String?   @default("")
  atendedAt         DateTime?
  timeToSchedule    Float?
  scheduledAt       DateTime?
  deadlineToDeliver DateTime?
  delivered         Boolean   @default(false)
  deliveredAt       DateTime?
  finishedBy        String?   @default("")
  finishedAt        DateTime?
  checkoutBy        String?
  checkoutAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  budgets           budget[]
  Vehicle           Vehicle?  @relation(fields: [plate], references: [plate], onDelete: Cascade)
  plate             String
  Owner             User?     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId           String?
}
